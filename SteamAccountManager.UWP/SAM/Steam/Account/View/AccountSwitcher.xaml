<UserControl
    x:Class="SteamAccountManager.UWP.SAM.Steam.Account.View.AccountSwitcher"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SteamAccountManager.UWP.SAM.Steam.Account.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:VM="using:SteamAccountManager.UWP.SAM.Steam.Account.ViewModel"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <UserControl.DataContext>
        <VM:AccountSwitcherViewModel />
    </UserControl.DataContext>

    <ListView ItemsSource="{Binding Accounts}">
        <ListView.ItemTemplate>
            <DataTemplate>
                
                <StackPanel Orientation="Horizontal">
                    <!-- Profile Picture TODO: Set Placeholder Image -->
                    <Image Height="37" Width="37" Source="Assets/LockScreenLogo.scale-200.png" Margin="8, 8, 8, 8" />
                    <!-- Account Details -->
                    <TextBlock Text="{Binding Name}" VerticalAlignment="Top" Margin="0, 4, 8, 4" />
                </StackPanel>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</UserControl>
